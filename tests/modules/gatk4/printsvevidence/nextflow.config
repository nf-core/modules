process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }

    withName: GATK4_COLLECTSVEVIDENCE {
        ext.args = {"--sample-name ${meta.id}"}
    }


    withName: "GATK4_PRINTSVEVIDENCE*" {
        ext.prefix = {"${meta.id}_print"}
    }

}