process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }

    withName: NCBIGENOMEDOWNLOAD {
        ext.args = '-A GCF_000013425.1 --formats genbank,fasta,assembly-stats'
    }
}

profiles {
    singularity {
        containerOptions = "--cleanenv --workdir /tmp -B /tmp:/home/runner/.cache"
        scratch = '/tmp'
        stageInMode = 'copy'
        stageOutMode = 'move'
    }
}
