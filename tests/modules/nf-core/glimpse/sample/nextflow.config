process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
    withName: GLIMPSE_PHASE {
        ext.args = [
            "--impute-reference-only-variants"
        ].join(' ')
        ext.prefix = { "${meta.id}" }
    }
    withName: GLIMPSE_LIGATE {
        ext.args = [
        ].join(' ')
        ext.prefix = { "${meta.id}" }
        ext.suffix = "bcf"
    }
    withName: GLIMPSE_SAMPLE {
        ext.args = [
            "--sample"
        ].join(' ')
        ext.prefix = { "${meta.id}" }
        ext.suffix = "vcf"
    }
}