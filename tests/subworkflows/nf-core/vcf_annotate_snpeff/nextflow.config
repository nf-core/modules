process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }

    withName: SNPEFF_SNPEFF {
        publishDir       = [
                path: { "output/snpeff/test/" },
                pattern: "*{csv,html,genes.txt}"
        ]
    }

    withName: TABIX_BGZIPTABIX {
        ext.prefix = { "${meta.id}_snpEff.ann" }
        publishDir       = [
                path: { "output/snpeff/test/" },
                pattern: "*{gz,gz.tbi}"
        ]
    }

}
