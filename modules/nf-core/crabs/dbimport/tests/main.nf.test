nextflow_process {

    name "Test Process CRABS_DBIMPORT"
    script "../main.nf"
    process "CRABS_DBIMPORT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "crabs"
    tag "crabs/dbimport"

    test("sarscov2 - fasta") {

        when {
            params {
                module_args = "--seq_header species --delim ' ' --import-format embl \\"
            }
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path +'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path +'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}