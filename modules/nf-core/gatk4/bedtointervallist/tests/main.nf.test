nextflow_process {

    name "Test Process GATK4_BEDTOINTERVALLIST"
    script "../main.nf"
    process "GATK4_BEDTOINTERVALLIST"

    tag "modules"
    tag "modules_nfcore"
    tag "gatk4"
    tag "gatk4/bedtointervallist"

    test("test_gatk4_bedtointervallist") {

        when {
            process {
                """
                input[0] = [ [ id:'test' ], // meta map
                [ file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true) ]
                ]
                input[1] = [ [ id:'dict' ], // meta map
                file(params.test_data['sarscov2']['genome']['genome_dict'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}