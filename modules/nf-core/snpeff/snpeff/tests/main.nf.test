nextflow_process {

    name "Test Process SNPEFF_SNPEFF"
    script "../main.nf"
    process "SNPEFF_SNPEFF"
    config "./nextflow.config"
    tag "modules"
    tag "modules_nfcore"
    tag "modules_snpeff"
    tag "snpeff"
    tag "snpeff/snpeff"

    test("SNPEFF annotate with WBcel235.99") {

        when {
            process {
                """
                snpeff_cache = Channel.of([
                    [ id:'WBcel235.99' ],
                    file('s3://annotation-cache/snpeff_cache/WBcel235.99/')
                ]).collect()

                input[0] = Channel.of([
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/vcf/test.vcf', checkIfExists: true)
                ])
                input[1] = params.snpeff_db
                input[2] = snpeff_cache
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    file(process.out.genes_txt[0][3]),
                    file(process.out.report[0][3]).name,
                    file(process.out.summary_html[0][3]).name,
                    file(process.out.vcf[0][1]).name + ",variantsMD5:" + path(process.out.vcf[0][1]).vcf.variantsMD5,
                    process.out.findAll { key, val -> key.startsWith("versions") }
                ).match() }
            )
        }
    }

    test("SNPEFF annotate with WBcel235.99 - stub") {

        options "-stub"

        when {
            process {
                """
                snpeff_cache = Channel.of([
                    [ id:'WBcel235.99' ],
                    file("${projectDir}")
                ]).collect()

                input[0] = Channel.of([
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/vcf/test.vcf', checkIfExists: true)
                ])
                input[1] = params.snpeff_db
                input[2] = snpeff_cache
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    file(process.out.genes_txt[0][3]),
                    file(process.out.report[0][3]),
                    file(process.out.summary_html[0][3]),
                    file(process.out.vcf[0][1]),
                    process.out.findAll { key, val -> key.startsWith("versions") }
                ).match() }
            )
        }
    }
}
