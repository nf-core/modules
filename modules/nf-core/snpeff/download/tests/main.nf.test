
nextflow_process {

    name "Test Process SNPEFF_DOWNLOAD"
    script "../main.nf"
    process "SNPEFF_DOWNLOAD"

    tag "modules"
    tag "modules_nfcore"
    tag "snpeff"
    tag "snpeff/download"

    test("SNPEFF download cache for WBcel235.99") {

        when {
            process {
                """
                input[0] = [ [ id:"WBcel235.99" ], "WBcel235.99" ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.cache,
                    process.out.findAll { key, val -> key.startsWith("versions") }
                ).match() }
            )
        }
    }

    test("SNPEFF download cache for WBcel235.99 - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [ [ id:"WBcel235.99" ], "WBcel235.99" ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
