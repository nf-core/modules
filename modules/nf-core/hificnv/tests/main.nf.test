nextflow_process {

    name "Test Process HIFICNV"
    script "../main.nf"
    process "HIFICNV"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "hificnv"

    test("homo_sapiens - [bam] [fasta] - no_optional_inputs") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/bam/NA03697B2_downsampled.pbmm2.repeats.bam', checkIfExists: true), //bam
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/bam/NA03697B2_downsampled.pbmm2.repeats.bam.bai', checkIfExists: true), //bai;csi
                    [] // maf (optional)
                ]
                input[1] = [
                    [ id:'genome' ], // meta2
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome3.fasta', checkIfExists: true)
                ]
                input[2] = [
                    [:], // meta3 - empty
                    []   // exclude - empty file
                ]
                input[3] = [
                    [:], // meta4 - empty
                    []   // expected_cn - empty file
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("homo_sapiens - [bam] [fasta] - with_maf_input") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_with_maf', single_end:false ], // meta map
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/bam/NA03697B2_downsampled.pbmm2.repeats.bam', checkIfExists: true), //bam
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/bam/NA03697B2_downsampled.pbmm2.repeats.bam.bai', checkIfExists: true), //bai;csi
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/vcf/NA03697B2_new.pbmm2.repeats.vcf.gz', checkIfExists: true) // maf file
                ]
                input[1] = [
                    [ id:'genome' ], // meta2
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome3.fasta', checkIfExists: true)
                ]
                input[2] = [
                    [:], // meta3 - empty
                    []   // exclude - empty file
                ]
                input[3] = [
                    [:], // meta4 - empty
                    []   // expected_cn - empty file
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert process.out.maf.size() == 1 } // Verify MAF output is produced
            )
        }
    }
    
    test("homo_sapiens - bam - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/bam/NA03697B2_downsampled.pbmm2.repeats.bam', checkIfExists: true), //bam
                    file(params.modules_testdata_base_path +  'genomics/homo_sapiens/pacbio/bam/NA03697B2_downsampled.pbmm2.repeats.bam.bai', checkIfExists: true), //bai;csi
                    []
                ]
                input[1] = [
                    [ id:'genome' ], // meta2
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome3.fasta', checkIfExists: true)
                ]
                input[2] = [
                    [:], // meta3 - empty
                    []   // exclude - empty file
                ]
                input[3] = [
                    [:], // meta4 - empty
                    []   // expected_cn - empty file
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
