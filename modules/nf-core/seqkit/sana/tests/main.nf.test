nextflow_process {

    name "Test Process SEQKIT_SANA"
    script "../main.nf"
    process "SEQKIT_SANA"

    tag "modules"
    tag "modules_nfcore"
    tag "seqkit"
    tag "seqkit/sana"

    test("sarscov2 - fastq") {

        when {
            process {
                """
                input[0] = [[ id:'test', single_end:true ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1_broken.fastq.gz', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - fastq - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [[ id:'test', single_end:true ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1_broken.fastq.gz', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.reads,
                    process.out.log,
                    process.out.versions.collect{ path(it).yaml }
                ).match() }
            )
        }

    }

}
