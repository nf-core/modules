nextflow_process {

    name "Test Process SEQKIT_FASTQTOPARQUET"
    script "../main.nf"
    process "SEQKIT_FASTQTOPARQUET"

    tag "modules"
    tag "modules_nfcore"
    tag "seqkit"
    tag "seqkit/fastqtoparquet"

    test("sarscov2 - fastq") {

        when {
            process {
                """
                input[0] = [ [ id:'test' ],   // meta map
                           [ file(params.test_data['sarscov2']['illumina']['test_1_fastq_gz'], checkIfExists: true) ]
                     ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - fastq - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [ [ id:'test' ],   // meta map
                           [ file(params.test_data['sarscov2']['illumina']['test_1_fastq_gz'], checkIfExists: true) ]
                     ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
