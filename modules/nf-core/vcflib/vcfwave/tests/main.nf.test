nextflow_process {

    name "Test Process VCFLIB_VCFWAVE"
    script "../main.nf"
    process "VCFLIB_VCFWAVE"
    tag "modules"
    tag "modules_nfcore"
    tag "vcflib"
    tag "vcflib/vcfwave"

    test("homo_sapiens - vcf.gz") {

        when {
            params {
                outdir = $outputDir
            }
            process {
                """
                input[0] = [
                    [id:"test"],
                    file(params.test_data["homo_sapiens"]["illumina"]["test_haplotc_cnn_vcf_gz"], checkIfExists:true)
                ]
                """
            }
        }

        then {
            assertAll {
                { assert process.success },
                { assert snapshot(process.out).match() }
            }
        }

    }

    test("homo_sapiens - vcf - stub") {

        options "-stub"

        when {
            params {
                outdir = $outputDir
            }
            process {
                """
                input[0] = [
                    [id:"test"],
                    file(params.test_data["homo_sapiens"]["illumina"]["test_haplotc_cnn_vcf_gz"], checkIfExists:true)
                ]
                """
            }
        }

        then {
            assertAll {
                { assert process.success },
                { assert snapshot(process.out).match() }
            }
        }

    }

}
