nextflow_process {

    name "Test Process NGSBITS_UPDHUNTER"
    script "../main.nf"
    process "NGSBITS_UPDHUNTER"
    config './nextflow.config'

    tag "modules"
    tag "modules_nfcore"
    tag "ngsbits"
    tag "ngsbits/updhunter"

    test("vcf") {
        when {
            params {
                module_args = "-c hugelymodelbat -f earlycasualcaiman -m slowlycivilbuck"
            }
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/vcf/ped/justhusky_minimal.vcf.gz', checkIfExists: true),
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("vcf - stub") {
        options "-stub"
        when {
            params {
                module_args = "-c hugelymodelbat -f earlycasualcaiman -m slowlycivilbuck"
            }
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/vcf/ped/justhusky_minimal.vcf.gz', checkIfExists: true),
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out,
                    process.out.versions.collect{ path(it).yaml }
                ).match() }
            )
        }
    }
}
