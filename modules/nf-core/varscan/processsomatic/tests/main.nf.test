nextflow_process {

    name "Test Process VARSCAN_PROCESSSOMATIC"
    script "../main.nf"
    process "VARSCAN_PROCESSSOMATIC"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "varscan"
    tag "varscan/processsomatic"

    test("human - mpileup") {

        setup {

            run("VARSCAN_SOMATIC") {
                script "../../somatic/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test', single_end:false ], // meta map
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/mpileup/test.mpileup.gz', checkIfExists: true),
                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/mpileup/test2.mpileup.gz', checkIfExists: true)
                    ]
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = VARSCAN_SOMATIC.out.vcf_snvs.collect{ meta, vcf -> [ meta, vcf ] }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert snapshot(process.out.version).match("version") },
                { assert path(process.out.germline_vcf.get(0).get(1)).linesGzip.contains("##fileformat=VCFv4.2") },
                { assert path(process.out.germline_hc_vcf.get(0).get(1)).linesGzip.contains("##fileformat=VCFv4.2") },
                { assert path(process.out.somatic_vcf.get(0).get(1)).linesGzip.contains("##fileformat=VCFv4.2") },
                { assert path(process.out.somatic_hc_vcf.get(0).get(1)).linesGzip.contains("##fileformat=VCFv4.2") },
                { assert path(process.out.loh_vcf.get(0).get(1)).linesGzip.contains("##fileformat=VCFv4.2") },
                { assert path(process.out.loh_hc_vcf.get(0).get(1)).linesGzip.contains("##fileformat=VCFv4.2") }
            )
        }

    }

    test("human - mpileup - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/vcf/empty.vcf.gz', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}