                ]
                input[1] = []
                input[2] = []
                input[3] = Channel.of("chr21:6000000-41743940\tfile1", "chr21:41743941-46661900\tfile2")
                    .collectFile(name:"scatter.tsv", newLine:true)
                input[4] = []
