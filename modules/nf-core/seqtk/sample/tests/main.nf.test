                                50
                            ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("sarscov2_sample_singlend_fqgz_stub") {
        options "-stub"

        when {
            process {
                """
                input[0] =  [
                                [ id:'test', single_end:true ],
