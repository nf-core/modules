nextflow_process {

    name "Test Process RAGTAG_SCAFFOLD"
    script "../main.nf"
    process "RAGTAG_SCAFFOLD"

    tag "modules"
    tag "modules_nfcore"
    tag "ragtag"
    tag "ragtag/scaffold"

    test("A. thaliana Col-0 test data - ragtag - scaffold") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/modules/data/genomics/sarscov2/genome/genome.fasta.gz', checkIfExists: true),
                    file('https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/modules/data/genomics/sarscov2/genome/genome.fasta.gz', checkIfExists: true),
                    [],
                    [],
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }
    test("A. thaliana Col-0 test data - ragtag - scaffold - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/modules/data/genomics/sarscov2/genome/genome.fasta.gz', checkIfExists: true),
                    file('https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/modules/data/genomics/sarscov2/genome/genome.fasta.gz', checkIfExists: true),
                    [],
                    [],
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
