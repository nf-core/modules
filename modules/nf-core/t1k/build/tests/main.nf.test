nextflow_process {

    name "Test Process T1K_BUILD"
    script "../main.nf"
    process "T1K_BUILD"

    tag "modules"
    tag "modules_nfcore"
    tag "t1k"
    tag "t1k/build"

    test("homo_sapiens - kir") {

        config "./nextflow.config"

        when {

            process {
                """
                input[0] = [
                    [ id:'test' ],
                    [],
                    [],
                    []
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    path(process.out.database.get(0).get(1)).md5,
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }

    }

    test("homo_sapiens - kir - stub") {

        config "./nextflow.config"
        options "-stub"

        when {
            process {
                """

                input[0] = [
                    [ id:'test' ],
                    [],
                    [],
                    []
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out
                ).match() }
            )
        }
    }


    test("homo_sapiens - fasta") {

        when {

            process {
                """
                input[0] = [
                    [ id:'test' ],
                    [],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.fasta', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.gtf', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    path(process.out.rna_sequences.get(0).get(1)).md5,
                    path(process.out.rna_coordinates.get(0).get(1)).md5,
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }

    }

    test("homo_sapiens - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    [],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.fasta', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.gtf', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out
                ).match() }
            )
        }

    }
}
