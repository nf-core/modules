nextflow_process {

    name "Test Process FCSGX_RUNGX"
    script "../main.nf"
    process "FCSGX_RUNGX"

    tag "modules"
    tag "modules_nfcore"
    tag "fcs"
    tag "fcs/fcsgx"

    test("sarscov2 - fasta") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true),
                ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.error }
            )
        }

    }

    test("sarscov2 - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true),
                ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.error }
            )
        }

    }

}
