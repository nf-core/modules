nextflow_process {

    name "Test Process OATK"
    script "../main.nf"
    process "OATK"
    config "./nextflow.config"

    tag "oatk"
    tag "modules"
    tag "modules_nfcore"

    test("test_oatk_mito") {

        when {

            params {
                oatk_args = "-k 1001 -c 10"
            }

            process {
                """
                input[0] = [
                    [id:"ilDeiPorc1"],
                    file(params.modules_testdata_base_path + 'genomics/eukaryotes/deilephila_porcellus/mito/ilDeiPorc1.HiFi.reads.fa', checkIfExists: true)
                ]
                input[1] = [
                    [id: "mito"],
                    [
                        file("https://raw.githubusercontent.com/c-zhou/OatkDB/main/v20230921/insecta_mito.fam", checkIfExists: true),
                        file("https://github.com/c-zhou/OatkDB/raw/main/v20230921/insecta_mito.fam.h3f", checkIfExists: true),
                        file("https://github.com/c-zhou/OatkDB/raw/main/v20230921/insecta_mito.fam.h3i", checkIfExists: true),
                        file("https://github.com/c-zhou/OatkDB/raw/main/v20230921/insecta_mito.fam.h3m", checkIfExists: true),
                        file("https://github.com/c-zhou/OatkDB/raw/main/v20230921/insecta_mito.fam.h3p", checkIfExists: true)
                    ]
                ]
                input[2] = [[:], []]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    file(process.out.final_gfa.get(0).get(1)).name,
                    file(process.out.initial_gfa.get(0).get(1)).name,
                    file(process.out.annot_mito_txt.get(0).get(1)).name,
                    file(process.out.log.get(0).get(1)).name,
                    process.out.mito_bed,
                    process.out.mito_fasta,
                    process.out.mito_gfa,
                    process.out.findAll { key, val -> key.startsWith("versions")}
                    ).match()
                }
            )
        }
    }

