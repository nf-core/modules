nextflow_process {

    name "Test Process OPTITYPE"
    script "../main.nf"
    process "OPTITYPE"

    tag "modules"
    tag "modules_nfcore"
    tag "optitype"

    test("hla - bam") {
        config "./nextflow.config"
        when {
            process {
                """
                input[0] = [ [ id:'test', seq_type:'dna' ], // meta map
                       file(params.test_data['homo_sapiens']['illumina']['test_paired_end_hla_sorted_bam'], checkIfExists: true),
                       file(params.test_data['homo_sapiens']['illumina']['test_paired_end_hla_sorted_bam_bai'], checkIfExists: true)
                     ]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.hla_type[0][1]).name).match("bam_hla_type") },
                { assert snapshot(file(process.out.coverage_plot[0][1]).name).match("bam_coverage_plot") },
                { assert snapshot(process.out.versions).match("bam_versions") }
            )
        }
    }

}
