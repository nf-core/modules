nextflow_process {

    name "Test Process BEDOPS_CONVERT2BED"
    script "../main.nf"
    process "BEDOPS_CONVERT2BED"

    tag "modules"
    tag "modules_nfcore"
    tag "bedops"
    tag "bedops/convert2bed"

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
