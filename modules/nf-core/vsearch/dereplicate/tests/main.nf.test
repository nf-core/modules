nextflow_process {
    name "Test Process VSEARCH_DEREPLICATE"
    script "../main.nf"
    process "VSEARCH_DEREPLICATE"

    tag "modules"
    tag "modules_nfcore"
    tag "vsearch"
    tag "vsearch/dereplicate"

    test("pollon - fasta") {

        when {
            process {
                """
                input[0] = Channel.of( [ [ "id": "ERR2537816", "single_end": false ], file("s3://pollen-metabarcoding-test-data/test_data/ERR2537816.filtered.fasta") ] )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("pollon -fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of( [ [ "id": "ERR2537816", "single_end": false ], file("s3://pollen-metabarcoding-test-data/test_data/ERR2537816.filtered.fasta") ] )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
            )
        }

    }

}
