nextflow_process {

    name "Test Process FGBIO_GROUPREADSBYUMI"
    script "../main.nf"
    process "FGBIO_GROUPREADSBYUMI"

    tag "modules"
    tag "modules_nfcore"
    tag "fgbio"
    tag "fgbio/groupreadsbyumi"

    test("sarscov2 - bam") {

        when {
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_umi_unsorted_tagged_bam'], checkIfExists: true)
                        ]
                input[1] = "Adjacency"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - bam - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_umi_unsorted_tagged_bam'], checkIfExists: true)
                        ]
                input[1] = "Adjacency"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
