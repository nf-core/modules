nextflow_process {

    name "Test Process OSFCLIENT_FETCH"
    script "../main.nf"
    process "OSFCLIENT_FETCH"

    tag "modules"
    tag "modules_nfcore"
    tag "osfclient"
    tag "osfclient/fetch"

    test("download") {
        when {
            process {
                """
                input[0] = [
                    [ id: '74vtp' ],
                    '74vtp',
                    'osfstorage/LJAF_Proposal_Cover_Sheet_and_Summary.docx'
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("download - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: '74vtp' ],
                    '74vtp',
                    'osfstorage/LJAF_Proposal_Cover_Sheet_and_Summary.docx'
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
