nextflow_process {

    name "Test Process PHAROKKA_INSTALLDATABASES"
    script "../main.nf"
    process "PHAROKKA_INSTALLDATABASES"

    tag "modules"
    tag "modules_nfcore"
    tag "pharokka"
    tag "pharokka/installdatabases"

    test("No input required") {
        then {
            assertAll(
                { assert process.success },
                // Verify the VERSION empty file exists
                { assert file(process.out.pharokka_db[0]).listFiles()
                    .any { it.name.startsWith("VERSION_") } },
                // Snapshot stable outputs only
                { assert snapshot(
                    file(process.out.pharokka_db[0]).listFiles()
                        .findAll { !it.name.startsWith("VERSION_") }
                        .sort(),
                    process.out.versions
                ).match() }
            )
        }

    }

}
