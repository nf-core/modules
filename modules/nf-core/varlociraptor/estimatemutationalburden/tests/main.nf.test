nextflow_process {

    name "Test Process VARLOCIRAPTOR_ESTIMATEMUTATIONALBURDEN"
    script "../main.nf"
    process "VARLOCIRAPTOR_ESTIMATEMUTATIONALBURDEN"

    tag "modules"
    tag "modules_nfcore"
    tag "varlociraptor"
    tag "varlociraptor/estimatemutationalburden"

    test("human - vcf - svg") {
        when {
            process {
                """
                input[0] = [
                    [id:'test'],
                    file('https://github.com/varlociraptor/varlociraptor/raw/refs/heads/master/tests/resources/testcases/test_tmb/annotated.vcf', checkIfExists:true)
                    //file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/gatk/haplotypecaller_calls/test2_haplotc.ann.vcf.gz', checkIfExists:true)
                    ]
                input[1] = "curve"
                """
            }
        }
        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("human - vcf - svg - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [
                    [id:'test'],
                    file('https://github.com/varlociraptor/varlociraptor/raw/refs/heads/master/tests/resources/testcases/test_tmb/annotated.vcf', checkIfExists:true)
                    ]
                input[1] = "curve"
                """
            }
        }
        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out,
                    path(process.out.versions[0]).yaml
                ).match() }
            )
        }
    }

    test("human - vcf - tsv") {
        when {
            process {
                """
                input[0] = [
