nextflow_process {

    name "Test Process PARAPHASE"
    script "../main.nf"
    process "PARAPHASE"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "paraphase"

    test("homo_sapiens - [ bam, bai ] , []") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ], // meta map
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/new_reheader.bam", checkIfExists: true),
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/new_reheader.bam.bai", checkIfExists: true),
                ]
                input[1] = [
                    [ id:'test_ref' ], // meta map
                    file("/media/ssd_4tb/felix/projects/fellen31/test-datasets/data/genomics/homo_sapiens/genome/PRODH_chr22_chr22_KI270734v1_random.fa.gz", checkIfExists: true)
                ]
                input[2] = [
                    [:],
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    file(process.out.json.get(0).get(1)).readLines()[0..39],
                    process.out.versions,
                    process.out.vcf,
                    process.out.bam ==~ "test.paraphase.bam",
                    process.out.bai ==~ "test.paraphase.bam.bai",
                    ).match()
                },
                { assert process.out.bam.get(0).get(1) =~ "test.paraphase.bam" },
                { assert process.out.bai.get(0).get(1) =~ "test.paraphase.bam.bai" },
            )
        }

    }

    test("homo_sapiens - [ bam, bai ] , config") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ], // meta map
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/new_reheader.bam", checkIfExists: true),
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/new_reheader.bam.bai", checkIfExists: true),
                ]
                input[1] = [
                    [ id:'test_ref' ], // meta map
                    file("/media/ssd_4tb/felix/projects/fellen31/test-datasets/data/genomics/homo_sapiens/genome/PRODH_chr22_chr22_KI270734v1_random.fa.gz", checkIfExists: true)
                ]
                input[2] = [
                    [ id:'test_config' ],
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/paraphase_config.yaml", checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    file(process.out.json.get(0).get(1)).readLines()[0..39],
                    process.out.versions,
                    process.out.vcf,
                    process.out.bam ==~ "test.paraphase.bam",
                    process.out.bai ==~ "test.paraphase.bam.bai",
                    ).match()
                },
                { assert process.out.bam.get(0).get(1) =~ "test.paraphase.bam" },
                { assert process.out.bai.get(0).get(1) =~ "test.paraphase.bam.bai" },
            )
        }
    }

    test("homo_sapiens - [ bam, bai ], [] - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ], // meta map
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/new_reheader.bam", checkIfExists: true),
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/new_reheader.bam.bai", checkIfExists: true),
                ]
                input[1] = [
                    [ id:'test_ref' ], // meta map
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/PRODH.chr22_chr22_KI270734v1_random.fa.gz", checkIfExists: true)
                ]
                input[2] = [
                    [ id:'test_config' ],
                    file("/media/ssd_4tb/felix/projects/fellen31/modules/paraphase_config.yaml", checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("homo_sapiens - [ bam, bai ], config - stub") {

        options "-stub"

