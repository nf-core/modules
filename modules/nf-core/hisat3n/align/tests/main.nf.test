nextflow_process {

    name "Test Process HISAT3N_ALIGN"
    script "../main.nf"
    process "HISAT3N_ALIGN"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "hisat3n"
    tag "hisat3n/align"
    tag "hisat3n/build"

    test("sarscov2 - single-end") {

        setup {
            run("HISAT3N_BUILD") {
                script "../../build/main.nf"
                process {
                """
                input[0] = Channel.of([
                    [id:'genome'],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                ])
                """
                }
            }
        }

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:true ],
                    [ file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1.fastq.gz', checkIfExists: true) ]
                ])
                input[1] = HISAT3N_BUILD.out.index
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    sam(process.out.sam[0][1]).getStatistics(),
                    process.out.versions_hisat3n
                ).match("se") },
                { assert path(process.out.summary[0][1]).exists() }
            )
        }
    }

