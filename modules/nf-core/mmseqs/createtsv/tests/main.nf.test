    test("mmseqs/createtsv - sarscov2 - cluster - stub") {

        options "-stub"

        setup {
            run("MMSEQS_CREATEDB", alias: "MMSEQS_QUERY") {
                script "modules/nf-core/mmseqs/createdb/main.nf"
                process {
                    """
