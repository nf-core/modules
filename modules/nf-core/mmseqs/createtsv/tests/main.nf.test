                """
                }
            }
        }

        when {
            process {
                """
                ch_query  = MMSEQS_QUERY.out.db
                ch_target = MMSEQS_TARGET.out.db
                ch_result = MMSEQS_CLUSTER.out.db_cluster

                input[0] = ch_result
                input[1] = ch_query
                input[2] = ch_target
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.tsv).match("tsv") },
