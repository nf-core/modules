
nextflow_process {

    name "Test Process MMSEQS_DATABASES"
    script "../main.nf"
    process "MMSEQS_DATABASES"

    tag "modules"
    tag "modules_nfcore"
    tag "mmseqs"
    tag "mmseqs/databases"

    test("test-mmseqs-databases") {
        
        when {
            process {
                """
                input[0] = "SILVA"

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
    
    test("test-mmseqs-databases-stub") {
        options '-stub'
        when {
            process {
                """
                input[0] = "SILVA"

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
    
}
