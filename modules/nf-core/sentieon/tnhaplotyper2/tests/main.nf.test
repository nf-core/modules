    test("tumour normal - stub") {
        options '-stub'
        when {
            params {
                module_args  = ''
                module_args2 = '--tumor_sample tumour --normal_sample normal'
                module_args3 = ''
                module_args4 = ''
            }
            process {
                """
                input[0] = [[id:'test'],[],[],[]]
                input[1] = [[:],[]]
                input[2] = [[:],[]]
                input[3] = [[:],[]]
                input[4] = [[:],[]]
                input[5] = [[:],[]]
                input[6] = [[:],[]]
                input[7] = [[:],[]]
