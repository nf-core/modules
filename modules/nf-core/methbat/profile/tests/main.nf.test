nextflow_process {

    name "Test Process METHBAT_PROFILE"
    script "../main.nf"
    process "METHBAT_PROFILE"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "methbat"
    tag "methbat/profile"

    test("pacbio - bam - notphased") {

        setup {
            run("PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES") {
                script "../../../pbcpgtools/alignedbamtocpgscores/main.nf"
                process {
                    """
                    input[0] = Channel.fromList([
                                    tuple([ id:'test' ], // meta map
                                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/pacbio/bam/NA037562_downsampled.pbmm2.repeats.bam', checkIfExists: true),
                                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/pacbio/bam/NA037562_downsampled.pbmm2.repeats.bam.bai', checkIfExists: true))
                                ])
                    """
                }
            }
        }

        when {
            params{
                module_args = ""
            }
            process {

                """
                input[0] = PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES.out.combined_bed
                    .join(PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES.out.combined_bed_index)
                    .map { meta, combined_bed, combined_index -> [ meta, [combined_bed, combined_index] ]
                    }

                input[1] = [
                    [ id:'test'], // meta map
                    file('https://github.com/inemesb/test-datasets/raw/refs/heads/modules/data/genomics/homo_sapiens/pacbio/tsv/methbat_background_profile_small.tsv', checkIfExists: true)

                ]
                """

            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

