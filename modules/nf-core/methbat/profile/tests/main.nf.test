                                ])
                    """
                }
            }
        }

        when {
            params{
                module_args = "--output-asm-bed test.bed"
            }
            process {

                """
                input[0] = PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES.out.combined_bed
                    .join(PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES.out.combined_bed_index)
                    .map { meta, combined_bed, combined_index -> [ meta, [combined_bed, combined_index] ]
                    }

                input[1] = [
                    [ id:'test'], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/pacbio/tsv/methbat_background_profile_small.tsv', checkIfExists: true)

                ]
                """

            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.region_profile,
                    process.out.versions,
                    process.out.asm_bed.collect { 
                        it.collect { 
                            it instanceof String && file(it).exists() ? file(it).name : it 
                        } // check filename only
                    }
                    ).match() }
            )
        }

    }

    test("pacbio - bam - withlabels") {

        setup {
            run("PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES") {
                script "../../../pbcpgtools/alignedbamtocpgscores/main.nf"
                process {
                    """
                    input[0] = Channel.fromList([
                                    tuple([ id:'test' ], // meta map
                                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/pacbio/bam/NA037562_downsampled.pbmm2.repeats.bam', checkIfExists: true),
                                        file(params.modules_testdata_base_path + 'genomics/homo_sapiens/pacbio/bam/NA037562_downsampled.pbmm2.repeats.bam.bai', checkIfExists: true))
                                ])
                    """
                }
            }
        }

        when {
            params{
                module_args = "--profile-label MALE --profile-label FEMALE"
            }
            process {

                """
                input[0] = PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES.out.combined_bed
                    .join(PBCPGTOOLS_ALIGNEDBAMTOCPGSCORES.out.combined_bed_index)
                    .map { meta, combined_bed, combined_index -> [ meta, [combined_bed, combined_index] ]
                    }

                input[1] = [
                    [ id:'test'], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/pacbio/tsv/methbat_background_profile_small.tsv', checkIfExists: true)

                ]
                """

            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                {
                    // Check if output tsv contains labels MALE and FEMALE
                    def profileFile = file(process.out.region_profile[0][1]).text
                    assert profileFile.contains("MALE")
                    assert profileFile.contains("FEMALE")
                }
            )
        }

    }

