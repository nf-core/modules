nextflow_process {

    name "Test Process CIRIQUANT"
    script "../main.nf"
    process "CIRIQUANT"

    tag "modules"
    tag "modules_nfcore"
    tag "ciriquant"
    tag "bwa/index"
    tag "hisat2/build"
    tag "hisat2/extractsplicesites"

    setup {

        run("BWA_INDEX") {
            script "../../bwa/index/main.nf"
            process {
                """
                input[0] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.fa", checkIfExists: true) ]
                """
            }
        }

        run("HISAT2_EXTRACTSPLICESITES") {
            script "../../hisat2/extractsplicesites/main.nf"
            process {
                """
                input[0] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.gtf", checkIfExists: true) ]
                """
            }
        }

        run("HISAT2_BUILD") {
            script "../../hisat2/build/main.nf"
            process {
                """
                input[0] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.fa", checkIfExists: true) ]
                input[1] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.gtf", checkIfExists: true) ]
                input[2] = HISAT2_EXTRACTSPLICESITES.out.txt
                """
            }
        }

    }

    test("chrI") {

        when {
            process {
                """
                input[0] = [
                    [ id:'fust1', single_end:false ],
                    [
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/fastq/fust1_rep1_1.fastq.gz", checkIfExists: true),
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/fastq/fust1_rep1_2.fastq.gz", checkIfExists: true)
                    ]
                ]
                input[1] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.gtf", checkIfExists: true) ]
                input[2] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.fa", checkIfExists: true) ]
                input[3] = BWA_INDEX.out.index
                input[4] = HISAT2_BUILD.out.index
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }

            )
        }

    }

    test("chrI - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'fust1', single_end:false ],
                    [
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/fastq/fust1_rep1_1.fastq.gz", checkIfExists: true),
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/fastq/fust1_rep1_2.fastq.gz", checkIfExists: true)
                    ]
                ]
                input[1] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.gtf", checkIfExists: true) ]
                input[2] = [[ id:'chrI' ],
                            file("https://raw.githubusercontent.com/nf-core/test-datasets/circrna/reference/chrI.fa", checkIfExists: true) ]
                input[3] = BWA_INDEX.out.index
                input[4] = HISAT2_BUILD.out.index
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
