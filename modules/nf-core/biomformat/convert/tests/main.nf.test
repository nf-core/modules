nextflow_process {

    name "Test Process BIOMFORMAT_CONVERT"
    script "../main.nf"
    process "BIOMFORMAT_CONVERT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "vsearch/cluster"
    tag "gunzip"
    tag "biomformat"
    tag "biomformat/convert"

    setup {
        run ("VSEARCH_CLUSTER") {
            script "../../../vsearch/cluster/main.nf"

            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1.fastq.gz', checkIfExists: true)
                ]
                """
            }
        }

        run ("GUNZIP", alias: "GUNZIP_BIOM") {

            script "../../../gunzip/main.nf"
            process {
                """
                input[0] = VSEARCH_CLUSTER.out.biom
                """
            }
        }

        run ("GUNZIP", alias: "GUNZIP_TXT") {

            script "../../../gunzip/main.nf"
            process {
                """
                input[0] = VSEARCH_CLUSTER.out.otu
                """
            }
        }   
    }

    test("sarscov2 - text - biom") {

        when {
            params {
                vsearch_cluster_args  = '--id 0.8'
                vsearch_cluster_args2 = '--cluster_fast'
                vsearch_cluster_args3 = '--biomout'
                module_args           = '--to-tsv'
            }

            process {
                """
                input[0] = GUNZIP_BIOM.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - json - biom") {

        when {
            params {
                vsearch_cluster_args  = '--id 0.8'
                vsearch_cluster_args2 = '--cluster_fast'
                vsearch_cluster_args3 = '--otutabout'
                module_args           = '--table-type="OTU table" --to-json'
            }

            process {
                """
                input[0] = GUNZIP_TXT.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    path(process.out.biom[0][1]).json.findAll{it.key != "date"}.toString().md5(),
                    process.out.versions
                    ).match() 
                }
            )
        }

    }

    test("sarscov2 - hdf5 - fails on identical filenames") {

        when {
            params {
                vsearch_cluster_args   = '--id 0.8'
                vsearch_cluster_args2  = '--cluster_fast'
                vsearch_cluster_args3  = '--biomout'
                module_args            = '-table-type="OTU table" --to-hdf5'
            }            

            process {
                """
                input[0] = GUNZIP_BIOM.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert !process.success }
            )
        }

    }

    test("sarscov2 - text - biom - stub") {

        options "-stub"

        when {
            params {
                vsearch_cluster_args  = '--id 0.8'
                vsearch_cluster_args2 = '--cluster_fast'
                vsearch_cluster_args3 = '--biomout'
                module_args           = '--to-tsv'
            }

            process {
                """
                input[0] = GUNZIP_BIOM.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - json - biom - stub") {

        options "-stub"

        when {
            params {
                vsearch_cluster_args  = '--id 0.8'
                vsearch_cluster_args2 = '--cluster_fast'
                vsearch_cluster_args3 = '--otutabout'
                module_args           = '--table-type="OTU table" --to-json'
            }

            process {
                """
                input[0] = GUNZIP_TXT.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out,
                    path(process.out.versions[0]).yaml,
                ).match() }
            )
        }

    }

}
