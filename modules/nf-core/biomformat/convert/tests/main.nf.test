nextflow_process {

    name "Test Process BIOMFORMAT_CONVERT"
    script "../main.nf"
    process "BIOMFORMAT_CONVERT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "vsearch/cluster"
    tag "gunzip"
    tag "biomformat"
    tag "biomformat/convert"

    test("convert - to text") {

        config "./to_text.config"

        setup {
            run ("VSEARCH_CLUSTER") {

                script "../../../vsearch/cluster/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test', single_end:false ], // meta map
                        file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1.fastq.gz', checkIfExists: true)
                    ]
                    """
                }
            }

            run ("GUNZIP") {

                script "../../../gunzip/main.nf"
                process {
                    """
                    input[0] = VSEARCH_CLUSTER.out.biom
                    """
                }
            }

        }

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("convert - to json biom") {

        config "./to_json_biom.config"

        setup {
            run ("VSEARCH_CLUSTER") {

                script "../../../vsearch/cluster/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test', single_end:false ], // meta map
                        file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1.fastq.gz', checkIfExists: true)
                    ]
                    """
                }
            }

            run ("GUNZIP") {

                script "../../../gunzip/main.nf"
                process {
                    """
                    input[0] = VSEARCH_CLUSTER.out.otu
                    """
                }
            }

        }

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    path(process.out.biom[0][1]).readLines().last().contains('Biological Observation Matrix'),
                    process.out.versions
                    ).match() 
                }
            )
        }

    }

}
