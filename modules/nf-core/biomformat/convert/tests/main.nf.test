nextflow_process {

    name "Test Process BIOMFORMAT_CONVERT"
    script "../main.nf"
    process "BIOMFORMAT_CONVERT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "vsearch/cluster"
    tag "gunzip"
    tag "biomformat"
    tag "biomformat/convert"

    setup {
        run ("VSEARCH_CLUSTER", alias: "VSEARCH_CLUSTER_BIOMOUT") {

            script "../../../vsearch/cluster/main.nf"
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1.fastq.gz', checkIfExists: true)
                ]
                """
            }
        }

        run ("GUNZIP", alias: "GUNZIP_BIOMOUT") {

            script "../../../gunzip/main.nf"
            process {
                """
                input[0] = VSEARCH_CLUSTER_BIOMOUT.out.biom
                """
            }
        }

        run ("VSEARCH_CLUSTER", alias: "VSEARCH_CLUSTER_TXTOUT") {

            script "../../../vsearch/cluster/main.nf"
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fastq/test_1.fastq.gz', checkIfExists: true)
                ]
                """
            }
        }

        run ("GUNZIP", alias: "GUNZIP_TXTOUT") {

            script "../../../gunzip/main.nf"
            process {
                """
                input[0] = VSEARCH_CLUSTER_TXTOUT.out.otu
                """
            }
        }

    }

    test("convert - to text") {

        when {
            params {
                module_args = '--to-tsv'
            }            

            process {
                """
                input[0] = GUNZIP_BIOMOUT.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("convert - to json biom") {

        when {
            params {
                module_args = '--table-type="OTU table" --to-json'
            }

            process {
                """
                input[0] = GUNZIP_TXTOUT.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    path(process.out.biom[0][1]).readLines().last().contains('Biological Observation Matrix'),
                    process.out.versions
                    ).match() 
                }
            )
        }

    }

    test("fails on identical filenames") {

        when {
            params {
                module_args = '-table-type="OTU table" --to-hdf5'
            }            

            process {
                """
                input[0] = GUNZIP_BIOMOUT.out.gunzip
                """
            }
        }

        then {
            assertAll(
                { assert !process.success }
            )
        }

    }

}
