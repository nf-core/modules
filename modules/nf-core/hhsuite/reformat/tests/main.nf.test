nextflow_process {

    name "Test Process HHSUITE_REFORMAT"
    script "../main.nf"
    process "HHSUITE_REFORMAT"

    tag "modules"
    tag "modules_nfcore"
    tag "hhsuite"
    tag "hhsuite/reformat"

    test("sarscov2 - proteome - fa - a3m") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + '../../multiplesequencealign/testdata/toxin-ref.fa', checkIfExists: true)
                ]
                input[1] = "fas"
                input[2] = "a3m"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - proteome - fa - a3m - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + '../../multiplesequencealign/testdata/toxin-ref.fa', checkIfExists: true)
                ]
                input[1] = "fas"
                input[2] = "a3m"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
