nextflow_process {

    name "Test Process YTE"
    script "../main.nf"
    process "YTE"

    tag "modules"
    tag "modules_nfcore"
    tag "yte"

    test("yaml - map") {

        when {
            process {
                """
                input[0] = [
                    [ id:'template' ], // meta map
                    file(params.modules_testdata_base_path + "generic/config/config_template.yte.yaml", checkIfExists: true),
                    [],
                    [ 'sex': 'female' ] // map
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

