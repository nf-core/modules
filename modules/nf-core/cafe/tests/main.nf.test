nextflow_process {

    name "Test Process CAFE"
    script "../main.nf"
    process "CAFE"

    tag "modules"
    tag "modules_nfcore"
    tag "cafe"

    test("mycoplasma - genecounts - tree") {
        when {
            process {
                """
                input[0] = [
                    [id: 'mycoplasma'],
                    file('/workspace/modules/modules/nf-core/cafe/tests/hog_gene_counts.tsv')
                ]
                input[1] = channel.of( file('/workspace/modules/modules/nf-core/cafe/tests/SpeciesTree_rooted_node_labels_myco.utf8.txt') )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.cafe_base_count,
                    process.out.cafe_significant_trees,
                    file(process.out.cafe_report[0]).readLines()[3..4],
                    process.out.cafe_results,
                    process.out.versions
                    ).match()
                }
            )
        }
    }

    test("mycoplasma - genecounts - tree - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [ [id: 'mycoplasma'], channel.of( file('s3://excon/cafe_input/hog_gene_counts.tsv') ) ]
                input[1] = channel.of( file('s3://excon/cafe_input/SpeciesTree_rooted_ultra.txt') )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.cafe_base_count
                    ).match()
                }
            )
        }

    }

}
