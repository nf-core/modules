nextflow_process {

    name "Test Process CAFE"
    script "../main.nf"
    process "CAFE"

    tag "modules"
    tag "modules_nfcore"
    tag "cafe"

    test("mycoplasma - genecounts - tree") {
        when {
            process {
                """
                def file_a = file('s3://excon/cafe_input/hog_gene_counts.tsv')
                def file_b = file('s3://excon/cafe_input/SpeciesTree_rooted_ultra.txt')

                input[0] = [
                    [id:'mycoplasma'],
                    [ file_a ]
                ]
                input[1] = [ file_b ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.cafe_base_count,
                    process.out.cafe_significant_trees,
                    process.out.cafe_results,
                    file(process.out.cafe_report[0]).readLines()[3..4],
                    process.out.versions
                    ).match()
                }
            )
        }
    }

    test("mycoplasma - genecounts - tree - stub") {

        options "-stub"

        when {
            process {
                """
                def file_a = file('s3://excon/cafe_input/hog_gene_counts.tsv')
                def file_b = file('s3://excon/cafe_input/SpeciesTree_rooted_ultra.txt')

                input[0] = [
                    [id:'mycoplasma'],
                    [ file_a ]
                ]
                input[1] = [ file_b ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.cafe_base_count,
                    process.out.cafe_significant_trees,
                    process.out.cafe_results,
                    process.out.versions
                    ).match()
                }
            )
        }

    }

}
