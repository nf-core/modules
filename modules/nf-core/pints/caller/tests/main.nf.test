nextflow_process {

    name "Test Process PINTS_CALLER"
    script "../main.nf"
    process "PINTS_CALLER"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "pints"
    tag "pints/caller"

    // Should fail if more than 1 bam is provided
    test("groHMM data - [bam, bam], chr") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    [
                        file("https://raw.githubusercontent.com/Kraus-Lab/groHMM/master/inst/extdata/S0mR1.bam", checkIfExists: true),
                        file("https://raw.githubusercontent.com/Kraus-Lab/groHMM/master/inst/extdata/S40mR1.bam", checkIfExists: true)
                    ],
                    "chr7",
                ]
                input[1] = "GROseq"
                """
            }
        }

        then {
            assertAll(
                { assert process.failed },
                { assert process.exitStatus == 1 },
            )
        }
    }

    test("groHMM data - [bam], chr") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    [
                        file("https://raw.githubusercontent.com/Kraus-Lab/groHMM/master/inst/extdata/S40mR1.bam", checkIfExists: true)
                    ],
                    "chr7",
                ]
                input[1] = "GROseq"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.divergent_TREs,
                    process.out.bidirectional_TREs,
                    file(process.out.unidirectional_TREs.get(0).get(1)).name,
                    path(process.out.versions.get(0)).yaml,
                ).match("bams")
                },
            )
        }
    }

    test("groHMM data - [bam], no chr") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    [
                        file("https://raw.githubusercontent.com/Kraus-Lab/groHMM/master/inst/extdata/S0mR1.bam", checkIfExists: true)
                    ],
                    [],
                ]
                input[1] = "GROseq"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.divergent_TREs,
                    process.out.bidirectional_TREs,
                    file(process.out.unidirectional_TREs[0][1]).name,
                    path(process.out.versions.get(0)).yaml,
                ).match("single_bam")
                },
                { assert snapshot(path(process.out.versions.get(0)).yaml).match("versions") },
            )
        }
    }

    test("Fails if no signal is found") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true)
                    [],
                ]
                input[1] = "GROseq"
                """
            }
        }

        then {
            assertAll(
                { assert process.failed },
                { assert process.exitStatus == 1 },
            )
        }
    }

    // TODO Test single bigwig input
    // TODO Test multiple bigwig input
}