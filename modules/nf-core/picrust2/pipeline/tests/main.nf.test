nextflow_process {

    name "Test Process PICRUST2_PIPELINE"
    script "../main.nf"
    process "PICRUST2_PIPELINE"

    tag "modules"
    tag "modules_nfcore"
    tag "picrust2"
    tag "picrust2/pipeline"


    test("picrust2 pipeline - 16s otu") {

        config "./nextflow.config"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                    file('https://raw.githubusercontent.com/dialvarezs/nfcore-test-datasets/refs/heads/modules/data/metabarcoding/16S_OTU/rep-seq.fasta', checkIfExists: true),
                    file('https://raw.githubusercontent.com/dialvarezs/nfcore-test-datasets/refs/heads/modules/data/metabarcoding/16S_OTU/feature-table.tsv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() },
                { assert snapshot(process.out.versions).match() }
            )
        }

    }

    test("picrust2 pipeline - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file('https://raw.githubusercontent.com/dialvarezs/nfcore-test-datasets/refs/heads/modules/data/metabarcoding/16S_OTU/rep-seq.fasta', checkIfExists: true),
                    file('https://raw.githubusercontent.com/dialvarezs/nfcore-test-datasets/refs/heads/modules/data/metabarcoding/16S_OTU/feature-table.tsv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() },
                { assert snapshot(process.out.versions).match() }
            )
        }

    }

}
