nextflow_process {

    name "Test Process BACKSUB"
    script "../main.nf"
    process "BACKSUB"
    tag "modules"
    tag "modules_nfcore"
    tag "backsub"


    test("Should run without failures") {
        when {
            params {
                module_args = '--pixel-size 0.65'
            }
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'imaging/background_subtraction/cycif_tonsil_registered.ome.tif', checkIfExists: true)
                ]
                input[1] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'imaging/background_subtraction/markers.csv', checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll (
                { assert process.success },
                { assert snapshot(
                    process.out.backsub_tif,
                    process.out.markerout,
                    process.out.versions
                ).match() }
            )
        }
    }

    test("Should run without failures - stub") {
        options "-stub"

        when {
            params {
                module_args = '--pixel-size 0.65'
            }
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'imaging/background_subtraction/cycif_tonsil_registered.ome.tif', checkIfExists: true)
                ]
                input[1] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'imaging/background_subtraction/markers.csv', checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll (
                { assert process.success },
                { assert snapshot(
                    process.out.backsub_tif,
                    process.out.markerout,
                    process.out.versions
                ).match() }
            )
        }
    }

    test("Should fail if background not in marker_name column") {
        when {
            params {
                module_args = '--pixel-size 0.65'
            }
            process {
                """
                def markers_invalid = file('markers_invalid.csv')
                markers_invalid.text = '''channel,cycle,marker_name,exposure,background,remove
1,1,DNA 1,100,,
2,1,Na/K ATPase,100,,
3,1,CD3,100,,
4,1,CD45RO,100,,
5,2,DNA 2,100,,TRUE
6,2,Antigen Ki67,100,TestBackground,
7,2,Pan-cytokeratin,100,CD3,
8,2,Aortic smooth muscle actin,100,CD45RO,
'''

                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'imaging/background_subtraction/cycif_tonsil_registered.ome.tif', checkIfExists: true)
                ]
                input[1] = [
                    [ id:'test' ],
                    file('markers_invalid.csv')
                ]
                """
            }
        }
        then {
            assertAll (
                { assert !process.success }
            )
        }
    }
}
