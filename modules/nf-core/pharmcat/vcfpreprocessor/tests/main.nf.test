nextflow_process {

    name "Test Process PHARMCAT"
    script "../main.nf"
    process "PHARMCAT_VCFPREPROCESSOR"

    tag "modules"
    tag "modules_nfcore"
    tag "pharmcat"
    tag "pharmcat/vcfpreprocessor"

    test("pharmcat - vcf") {

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                    file('../test_data/test2.vcf.gz', checkIfExists: true),
                ]
                
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("pharmcat - vcf - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ], 
                    file('../test_data/test2.vcf.gz', checkIfExists: true),
                ]
                
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
