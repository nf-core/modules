nextflow_process {

    name "Test Process PHARMCAT_REPORT"
    script "../main.nf"
    process "PHARMCAT_REPORT"

    tag "modules"
    tag "modules_nfcore"
    tag "pharmcat"
    tag "pharmcat/report"

    test("pharmcat - vcf") {

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                    file('../test_data/test2.preprocessed.vcf.bgz', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
    test("pharmcat - vcf - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                    file('../test_data/test2.preprocessed.vcf.bgz', checkIfExists: true),
                ]
                """
            }
        }
        
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}

