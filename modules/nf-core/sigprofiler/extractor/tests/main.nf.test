nextflow_process {

    name "Test Process SIGPROFILER_EXTRACTOR"
    script "../main.nf"
    process "SIGPROFILER_EXTRACTOR"

    tag "modules"
    tag "modules_nfcore"
    tag "sigprofiler"
    tag "sigprofiler/extractor"

    test("SigProfilerExtractor - vcf input") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['homo_sapiens']['illumina']['test_test2_paired_mutect2_calls_vcf_gz'], checkIfExists: true)
                    ]
                input[1] = ["GRCh38"]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

