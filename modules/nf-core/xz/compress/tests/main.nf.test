nextflow_process {
    name "Test Process XZ_COMPRESS"
    script "../main.nf"
    process "XZ_COMPRESS"

    tag "modules"
    tag "modules_nfcore"
    tag "xz"
    tag "xz/compress"

    test("sarscov2 - genome - fasta") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                    ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert process.out.archive != null },
                { assert process.out.archive.get(0).get(1) ==~ ".*/genome.fasta.xz"  },
                // the checksum of the output archive may depend on the number of cores used, do not check the snapshot
                //{ assert snapshot(process.out.archive).match("archive")},
                { assert snapshot(process.out.versions).match("versions") }
            )
        }
    }
}
