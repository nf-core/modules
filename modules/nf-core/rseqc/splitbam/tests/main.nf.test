nextflow_process {

    name "Test Process RSEQC_SPLITBAM"
    script "../main.nf"
    process "RSEQC_SPLITBAM"

    tag "modules"
    tag "modules_nfcore"
    tag "rseqc"
    tag "rseqc/splitbam"

    test("sarscov2 - [[meta] - bam - bai] - [[meta2] - bed]") {

        when {
            process {
                """
                input[0] = channel.of([
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + "genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam", checkIfExists: true),
                    file(params.modules_testdata_base_path + "genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam.bai", checkIfExists: true)
                ])
                input[1] = channel.of([
                    [ id:'test_bed' ], // meta2 map
                    file(params.modules_testdata_base_path + "genomics/sarscov2/genome/bed/test.bed12", checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out
                ).match() }
            )
        }

    }

    test("sarscov2 - [[meta] - bam - bai] - [[meta2] - bed] - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = channel.of([
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + "genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam", checkIfExists: true),
                    file(params.modules_testdata_base_path + "genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam.bai", checkIfExists: true)
                ])
                input[1] = channel.of([
                    [ id:'test_bed' ], // meta2 map
                    file(params.modules_testdata_base_path + "genomics/sarscov2/genome/bed/test.bed12", checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out
                ).match() }
            )
        }

    }

}
