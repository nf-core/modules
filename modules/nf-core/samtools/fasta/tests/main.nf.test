
nextflow_process {

    name "Test Process SAMTOOLS_FASTA"
    script "../main.nf"
    process "SAMTOOLS_FASTA"

    tag "modules"
    tag "modules_nfcore"
    tag "samtools"
    tag "samtools/fasta"

    test("test-samtools-fasta") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ]
                input[1] = false
                """
            }
        }

        then {
            assert process.success
            assert snapshot([
                "fasta": process.out.fasta,
                "versions_samtools": process.out.versions_samtools
            ]).match()
        }
    }

    test("test-samtools-fasta-interleave") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ]
                input[1] = true

                """
            }
        }

        then {
            assert process.success
            assert snapshot([
                "interleaved": process.out.interleaved,
                "versions_samtools": process.out.versions_samtools
            ]).match()
        }
    }

    test("test-samtools-fasta-interleave - interleaved -- stub") {
        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ]
                input[1] = true
                """
            }
        }

        then {
            assert process.success
            assert snapshot(sanitizeOutput(process.out)).match()
        }
    }

    test("test-samtools-fasta - single end - 1 fasta + singleton-- stub") {
        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ]
                input[1] = false
                """
            }
        }

        then {
            assert process.success
            assert snapshot(sanitizeOutput(process.out)).match()
        }
    }

    test("test-samtools-fasta - false - 2 fasta + singleton -- stub") {
        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.bam', checkIfExists: true)
                ]
                input[1] = false
                """
            }
        }

        then {
            assert process.success
            assert snapshot(sanitizeOutput(process.out)).match()
        }
    }

}
