nextflow_process {

    name "Test Process SAMTOOLS_CALMD"
    script "../main.nf"
    process "SAMTOOLS_CALMD"

    tag "modules"
    tag "modules_nfcore"
    tag "samtools"
    tag "samtools/calmd"

    test("bam") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true)
                ])
                input[1] = Channel.of([
                    [ id:'fasta' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.fasta', checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.bam[0][1]).name).match("bam_reads") },
                { assert snapshot(process.out.versions).match("bam_versions") }
            )
        }

    }

    test("bam_stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true)
                ])
                input[1] = Channel.of([
                    [ id:'fasta' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.fasta', checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.bam[0][1]).name).match("bam_stub_reads") },
                { assert snapshot(process.out.versions).match("bam_stub_versions") }
            )
        }

    }

}
