nextflow_process {

    name "Test Process SAMTOOLS_CALMD"
    script "../main.nf"
    process "SAMTOOLS_CALMD"

    tag "modules"
    tag "modules_nfcore"
    tag "samtools"
    tag "samtools/calmd"

    test("bam") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true)
                ]
                input[1] = [
                    [id:'fasta'],
                    file(params.test_data['homo_sapiens']['genome']['genome_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.bam[0][1]).name).match("bam_reads") },
                { assert snapshot(process.out.versions).match("bam_versions") }
            )
        }

    }

    test("bam_stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true)
                ]
                input[1] = [
                    [id:'fasta'],
                    file(params.test_data['homo_sapiens']['genome']['genome_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.bam[0][1]).name).match("bam_stub_reads") },
                { assert snapshot(process.out.versions).match("bam_stub_versions") }
            )
        }

    }

}
