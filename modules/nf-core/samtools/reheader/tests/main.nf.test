nextflow_process {

    name "Test Process SAMTOOLS_REHEADER"
    script "../main.nf"
    config "./nextflow.config"
    process "SAMTOOLS_REHEADER"

    tag "modules"
    tag "modules_nfcore"
    tag "samtools"
    tag "samtools/reheader"

    test("homo_sapiens - chrdel") {
        when {
            params {
                samtools_args = "--command 'sed -E \"s/^(@SQ.*)(\\tSN:)chr/\\1\\2/\"'"
            }
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("homo_sapiens - rgdel") {
        when {
            params {
                samtools_args = "--command 'grep -v ^@RG'"
            }
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("homo_sapiens - stub") {

        options "-stub"

        when {
            params {
                samtools_args = ""
            }
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
