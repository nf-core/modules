nextflow_process {

    name "Test module ARACNE3"
    script "../main.nf"
    process "ARACNE3"

    tag "modules"
    tag "modules_nfcore"
    tag "aracne3"

    test("aracne3_5samples_100regulators_5threads") {
        config "./aracne3.config"

        when {
            params {
                outdir = "./output"
                aracne3_args = "--threads 5 --alpha 1"
            }
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file("/data1/papaemme/isabl/home/liosisk/repos/nf-core-modules/modules/nf-core/aracne3/exp_mat_short.txt", checkIfExists: true)
                ]
                input[1] = file("/data1/papaemme/isabl/home/liosisk/repos/nf-core-modules/modules/nf-core/aracne3/regulators_short.txt", checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.consensus_network).match("tsv") },
                { assert snapshot(process.out.subnets).match(".tsv") },
                { assert snapshot(process.out.versions).match("versions") },
            )
        }

    }
}
