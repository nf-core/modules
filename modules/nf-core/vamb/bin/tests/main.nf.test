        }

        when {
            params {
                mmseqs_taxonomy_args = "--tax-lineage 1"
                // Recommended parameters for testing in taxonomy mode
                vamb_args = "-e 5 -q 2 3 -pe 5 --minfasta 1 -o '' --seed 1"
            }
            process {
                """
                input[0] = Channel.of([
                        [id: "ref"],
