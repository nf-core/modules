nextflow_process {

    name "Test Process GAPSEQ_FILL"
    script "../main.nf"
    process "GAPSEQ_FILL"

    tag "modules"
    tag "modules_nfcore"
    tag "gapseq"
    tag "gapseq/fill"

    test("test gap filling - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    file('test-draft.RDS'),
                    []
                ])
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
