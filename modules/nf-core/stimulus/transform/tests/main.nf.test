nextflow_process {

    name "Test Process STIMULUS_TRANSFORM"
    script "../main.nf"
    process "STIMULUS_TRANSFORM"

    tag "modules"
    tag "modules_nfcore"
    tag "stimulus"
    tag "stimulus/transform"

    test("test") {
        when {
            process {
                """                
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.modules_testdata_base_path + "../../deepmodeloptim/testdata/dna_experiment/experiment_config.json", checkIfExists: true)
                    ]
                input[1] = [
                    file(params.modules_testdata_base_path + "../../deepmodeloptim/testdata/dna_experiment/input_data_with_split.csv", checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("test - stub") {

        options "-stub"

        when {
            process {
                """                
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.modules_testdata_base_path + "../../deepmodeloptim/testdata/dna_experiment/experiment_config.json", checkIfExists: true)
                    ]
                input[1] = [
                    file(params.modules_testdata_base_path + "../../deepmodeloptim/testdata/dna_experiment/input_data_with_split.csv", checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
