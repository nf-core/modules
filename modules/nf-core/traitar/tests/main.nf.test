// nf-core modules test traitar
nextflow_process {

    name "Test Process TRAITAR"
    script "../main.nf"
    process "TRAITAR"

    tag "modules"
    tag "modules_nfcore"
    tag "traitar"

    // Real data test 
    test("traitar - proteomes") {

        config "./nf-test.config"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample' ],
                    file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/genome/genome.fna.gz', checkIfExists: true),
                ]
                input[1] = 'from_nucleotides'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.versions_traitar,
                    process.out.gene_prediction.collect { meta, files -> files.collect { file(it).name } },
                    process.out.pfam_annotation.collect { meta, files -> files.collect { file(it).name } },
                    process.out.predictions_combined.collect { meta, files -> files.collect { file(it).name } },
                    process.out.predictions_single_votes.collect { meta, files -> files.collect { file(it).name } },
                    process.out.predictions_flat.collect { meta, files -> files.collect { file(it).name } },
                    process.out.predictions_raw.collect { meta, files -> files.collect { file(it).name } }
                ).match() }
            )
        }
    }

    test("traitar - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample' ],
                    file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/genome/genome.fna.gz', checkIfExists: true),
                ]
                input[1] = 'from_nucleotides'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("traitar - unzipped input - stub") {

        options "-stub"
        
        setup {
            run("GUNZIP") {
                script "../../gunzip/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test_sample_unzipped' ],
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/genome/genome.fna.gz', checkIfExists: true)
                    ]
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = 'from_nucleotides'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}