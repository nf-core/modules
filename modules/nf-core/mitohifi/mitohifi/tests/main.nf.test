nextflow_process {

    name "Test Process MITOHIFI_MITOHIFI"
    script "../main.nf"
    process "MITOHIFI_MITOHIFI"

    tag "modules"
    tag "modules_nfcore"
    tag "mitohifi"
    tag "mitohifi/mitohifi"
    tag "seqkit/head"

    test("mitohifi - mitohifi - deilephila_porcellus - contigs mode") {

        // The test data contigs file contains two "valid" mito sequences, which leads to
        // unpredictable outputs from the module.
        //
        // Take the head of the module so we just get the first sequence!

        setup {
            run("SEQKIT_HEAD") {
                script "../../../seqkit/head/main.nf"
                process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + "genomics/eukaryotes/deilephila_porcellus/mito/ilDeiPorc1.contigs.fa", checkIfExists: true),
                    1
                ]
                """
                }
            }
        }

        when {

            process {
                """
                input[0] = SEQKIT_HEAD.out.subset
                input[1] = Channel.of(
                    [
                        [id: "ref"],
                        file(params.modules_testdata_base_path + "genomics/eukaryotes/deilephila_porcellus/mito/MW539688.1.fasta", checkIfExists: true),
                        file(params.modules_testdata_base_path + "genomics/eukaryotes/deilephila_porcellus/mito/MW539688.1.gb", checkIfExists: true)
                    ]
                )
                input[2] = Channel.of('contigs')
                input[3] = Channel.of(5)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.fasta,
                    file(process.out.stats.get(0).get(1)).name, // not stable
                    process.out.gb,
                    process.out.gff,
                    process.out.contigs_annotations,
                    process.out.coverage_plot,
                    process.out.final_mitogenome_annotation,
                    process.out.final_mitogenome_coverage,
                    process.out.shared_genes,
                    process.out.contigs_annotations,
                    process.out.findAll { key, val -> key.startsWith("versions")}
                    ).match()
                }
            )
        }

    }

