nextflow_process {

    name "Test Process SNPSITES"
    script "../main.nf"
    process "SNPSITES"

    tag "modules"
    tag "modules_nfcore"
    tag "snpsites"

    test("Test snpsites") {

        when {
            process {
                """
                input[0] = file(params.modules_testdata_base_path + '/data/genomics/sarscov2/genome/alignment/all_sites.fas', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.versions
                    ).match()
                },
                { assert snapshot(
                    process.out.constant_sites
                    ).match("constant_sites")
                },
                { assert snapshot(
                    process.out.constant_sites_string
                    ).match("constant_sites_string")
                },
                { assert snapshot(
                    process.out.fasta
                    ).match("fasta")
                }
            )
        }

    }
}
