nextflow_process {

    name "Test Process SNPSITES"
    script "../main.nf"
    process "SNPSITES"

    tag "modules"
    tag "modules_nfcore"
    tag "snpsites"

    test("Test snpsites") {

        when {
            process {
                """
                input[0] = file(params.test_data['sarscov2']['genome']['all_sites_fas'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.versions.get(0)
                    ).match()
                },
                { assert snapshot(
                    process.out.constant_sites_string
                    ).match()
                },
                { assert snapshot(
                    process.out.constant_sites_string
                    ).match()
                },
                { assert snapshot(
                    process.out.fasta
                    ).match()
                }
            )
        }

    }
}
