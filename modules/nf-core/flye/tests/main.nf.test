nextflow_process {

    name "Test Process FLYE"
    script "../main.nf"
    process "FLYE"
    tag "flye"
    tag "modules"
    tag "modules_nfcore"


    test("flye_pacbio_raw") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] =  [
                                [ id:'test' ], // meta map
                                file(params.test_data['homo_sapiens']['pacbio']['hifi'], checkIfExists: true)
                            ]
                input[1] = "--pacbio-raw"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
