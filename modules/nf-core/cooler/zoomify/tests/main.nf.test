nextflow_process {

    name "Test Process COOLER_ZOOMIFY"
    config "./nextflow.config"
    script "../main.nf"
    process "COOLER_ZOOMIFY"
   
    tag "modules"
    tag "modules_nfcore"
    tag "cooler"
    tag "cooler/zoomify"
   
    
    
    test("test_cooler_zoomify") {
        
        when {
            params {
                module_args = '-r 2,4,8'
            }
            process {
                """
                input[0] = [
                    [id:'test'],// meta map
                    file(params.test_data['generic']['cooler']['test_merge_cool'],checkIfExists:true)
                    ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
    
    
    test("test_cooler_zoomify -- stub") {
        options '-stub'
        when {
            params {
                module_args = '-r 2,4,8'
            }
            process {
                """
                input[0] = [
                    [id:'test'],// meta map
                    file(params.test_data['generic']['cooler']['test_merge_cool'],checkIfExists:true)
                    ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}