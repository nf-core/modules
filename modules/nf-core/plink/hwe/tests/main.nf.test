nextflow_process {

    name "test Plink HWE function"
    script "../main.nf"
    process "PLINK_HWE"
    tag "modules"
    tag "modules_nfcore"
    tag "plink"
    tag "plink/hwe"

    test("plink - VCF") {

        when {
            params {
                outdir = "test"
            }
            process {
                """
                input[0] = [ [id:"null"], [], [], []]
                input[1] = [
                    [id:"test"],
                    file(params.test_data['homo_sapiens']['popgen']['syntheticvcf_short_vcf_gz'], checkIfExists: true)
                ]
                input[2] = [ [id:"null"], []]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.version).match("version") },
                { assert snapshot(process.out.hwe).match() }
            )
        }
    }

    test("plink - binary") {

        when {
            params {
                outdir = "test"
            }
            process {
                """
                input[0] = [
                        [id:"test"],
                        file("https://raw.githubusercontent.com/lescai/test-datasets-devel/modules/data/genomics/homo_sapiens/popgen/plink_simulated.bed", checkIfExists:true),
                        file("https://raw.githubusercontent.com/lescai/test-datasets-devel/modules/data/genomics/homo_sapiens/popgen/plink_simulated.bim", checkIfExists:true),
                        file("https://raw.githubusercontent.com/lescai/test-datasets-devel/modules/data/genomics/homo_sapiens/popgen/plink_simulated.fam", checkIfExists:true)
                ]
                input[1] = [ [id:"null"], []]
                input[2] = [ [id:"null"], []]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.hwe).match() }
            )
        }
    }

    test("plink - BCF") {

        when {
            params {
                outdir = "test"
            }
            process {
                """
                input[0] = [ [id:"null"], [], [], []]
                input[1] = [ [id:"null"], []]
                input[2] = [
                    [id:"test"],
                    file("https://raw.githubusercontent.com/lescai/test-datasets-devel/modules/data/genomics/homo_sapiens/popgen/plink_simulated.bcf.gz", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.hwe).match() }
            )
        }
    }
}