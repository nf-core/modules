nextflow_process {

    name "test Plink HWE function"
    script "../main.nf"
    process "PLINK_HWE"
    tag "modules"
    tag "modules_nfcore"
    tag "plink"
    tag "plink/hwe"

    test("plink --hardy VCF") {

        when {
            params {
                outdir = "test"
            }
            process {
                """
                input[0] = [ [id:"null"], [], [], []]
                input[1] = [
                    [id:"test"],
                    file(params.test_data['homo_sapiens']['genome']['syntheticvcf_short_vcf_gz'], checkIfExists: true)
                ]
                input[2] = [ [id:"null"], []]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.version).match() },
                { assert snapshot(process.out.hwe).match() }
            )
        }
    }


}