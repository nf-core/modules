nextflow_process {

    name "test Plink HWE function"
    script "../main.nf"
    process "PLINK_HWE"
    tag "modules"
    tag "plink"
    tag "hwe"

    test("Testing Plink HWE with VCF file") {

        when {
            process {
                """
                input[0] = [ [:], []]
                input[1] = [
                    [id:test],
                    file(params.test_data['homo_sapiens']['genome']['vcf']['syntheticvcf_short.vcf.gz'], checkIfExists: true)
                ]
                input[2] = [ [:], []]

                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.version).match("version") },
                { assert snapshot(process.out).match() }
            )
        }
    }



}