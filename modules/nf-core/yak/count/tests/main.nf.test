nextflow_process {

    name "Test Process YAK_COUNT"
    script "../main.nf"
    process "YAK_COUNT"

    tag "modules"
    tag "modules_nfcore"
    tag "yak"
    tag "yak/count"

    test("test_yak_count_methylated_1_fastq_gz") {

        when {
            process {
                """                
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.test_data['sarscov2']['illumina']['test_methylated_1_fastq_gz'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used but keep the " - stub" suffix.
    test("test_yak_count_methylated_1_fastq_gz - stub") {

        options "-stub"

        when {
            process {
                 """                
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.test_data['sarscov2']['illumina']['test_methylated_1_fastq_gz'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
