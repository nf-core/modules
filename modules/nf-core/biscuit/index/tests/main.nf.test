nextflow_process {

    name "Test Process BISCUIT_INDEX"
    script "../main.nf"
    process "BISCUIT_INDEX"

    tag "modules"
    tag "modules_nfcore"
    tag "biscuit"
    tag "biscuit/index"

    test("sarscov2 genome [fasta]") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("sarscov2 genome [fasta] - stub") {
        options '-stub'

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

}
