// nf-core modules test mindagap/duplicatefinder
nextflow_process {

    name "Test Process MINDAGAP_DUPLICATEFINDER"
    script "../main.nf"
    process "MINDAGAP_DUPLICATEFINDER"

    tag "modules"
    tag "modules_nfcore"
    tag "mindagap"
    tag "mindagap/duplicatefinder"

    test("test_mindagap_duplicatefinder_spots") {

        when {
            params {
                outdir = "$outputDir"
                tilesize = 90
            }
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    https://raw.githubusercontent.com/nf-core/test-datasets/molkart/test_data/input_data/spots.txt
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                { assert snapshot("$outputDir/*markedDups.txt") }
            )
        }

    }

}
