nextflow_process {

    name "Test Process NAIL_SEARCH"
    script "../main.nf"
    process "NAIL_SEARCH"

    tag "modules"
    tag "modules_nfcore"
    tag "nail"
    tag "nail/search"
    tag "gunzip"

    setup {
        run("GUNZIP") {
            script "modules/nf-core/gunzip/main.nf"
            process {
                """
                input[0] = [
                    [ id: 'bac_16S' ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/proteome.hmm.gz', checkIfExists: true)
                ]
                """
            }
        }
    }

    test("sarscov2 - hmm - ali - tblout") {

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/proteome.fasta', checkIfExists: true)
                input[2] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - hmm - ali - tblout - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/proteome.fasta', checkIfExists: true)
                input[2] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
