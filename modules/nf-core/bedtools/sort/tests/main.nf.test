nextflow_process {

    name "Test Process BEDTOOLS_SORT"
    script "../main.nf"
    config "./nextflow.config"
    process "BEDTOOLS_SORT"

    tag "modules"
    tag "modules_nfcore"
    tag "bedtools"
    tag "bedtools/sort"

    test("test_bedtools_sort") {

        when {
            process {
                """
                input[0] = [ [ id:'test'],
                file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }


    test("test_bedtools_sort_with_genome") {

        when {
            process {
                """
                input[0] = [ [ id:'test'],
                file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                ]
                input[1] = Channel.of(file(params.test_data['sarscov2']['genome']['genome_fasta_fai'], checkIfExists: true))
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}