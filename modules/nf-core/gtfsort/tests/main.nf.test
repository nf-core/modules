nextflow_process {

    name "Test Process GTFSORT"
    script "../main.nf"
    process "GTFSORT"

    test("hsapiens - gtf") {

        when {
            process {
                """
                input[0] = file(params.test_data['homo_sapiens']['genome']['genome_gtf'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("hsapiens - gtf - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = file(params.test_data['homo_sapiens']['genome']['genome_gtf'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
