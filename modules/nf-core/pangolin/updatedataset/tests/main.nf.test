// nf-core modules test pangolin/updatedataset
nextflow_process {

    name "Test Process PANGOLIN_UPDATEDATASET"
    script "../main.nf"
    process "PANGOLIN_UPDATEDATASET"

    tag "modules"
    tag "modules_nfcore"
    tag "pangolin"
    tag "pangolin/updatedataset"

    test("str - testdb") {

        when {
            process {
                """
                input[0] = 'testdb'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("str - testdb - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = 'testdb'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
