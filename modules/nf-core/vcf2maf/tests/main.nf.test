nextflow_process {
    name "Test vcf2maf"
    process "VCF2MAF"
    script "../main.nf"

    tag "modules"
    tag "modules_nfcore"
    tag "vcf2maf"

    test("Run without VEP") {
        config "./nextflow.config"
        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = [
                                [ id:'test'], // meta map
                                file(params.test_data['homo_sapiens']['illumina']['test_genome_vcf'], checkIfExists: true)
                            ]
                input[1] = [ file(params.test_data['homo_sapiens']['genome']['genome_fasta'], checkIfExists: true) ]
                input[2] = []
                """
            }
        }
        then {
            // NOTE: need this for debugging but remove for the PR when ready
            println path(process.out.maf[0][1]).readLines()
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() },
            { assert path(process.out.maf[0][1]).readLines().size() == 132 },
            { assert path(process.out.versions[0]).readLines() == ['"VCF2MAF":', '    vcf2maf: 1.6.21', '    ensemblvep: 106.1'] }
            )
        }
    }

    test("Run with VEP"){
        tag "vcf2maf-withVEP"
        config "./nextflow.withVEP.config"

        setup {
            run("UNTAR") {
                script "../../../../modules/nf-core/untar/main.nf"
                process {
                """
                input[0] = [ [ id:'test_genome_vep' ], file(params.test_data['homo_sapiens']['genome']['vep_cache'], checkIfExists: true) ]
                """
            }
        }
        }

        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = [
                                [ id:'test'], // meta map
                                file(params.test_data['homo_sapiens']['illumina']['test_genome_vcf'], checkIfExists: true)
                            ]
                input[1] = [ file(params.test_data['homo_sapiens']['genome']['genome_fasta'], checkIfExists: true) ]
                input[2] = UNTAR.out.untar.map { it[1] }
                """
            }
        }

        then{
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() },
            { assert path(process.out.maf[0][1]).readLines().size() == 2 }, // no variants, only header lines
            { assert path(process.out.versions[0]).readLines() == ['"VCF2MAF":', '    vcf2maf: 1.6.21', '    ensemblvep: 106.1'] }
            )
        }
    }

    }

