nextflow_process {

    name "Test Process ODGI_BUILD"
    script "../main.nf"
    process "ODGI_BUILD"

    tag "modules"
    tag "modules_nfcore"
    tag "odgi"
    tag "odgi/build"

    test("homo_sapiens - pangenome - pangenome_smoothxg_gfa") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'pangenomics/homo_sapiens/pangenome.smoothxg.gfa', checkIfExists: true)
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
//                 { assert snapshot(process.out).match() } // the odgi file on disk may not be deterministic, but the graph itself is
            )
        }

    }

}
