nextflow_process {

    name "Test Process INTERPROSCAN"
    script "../main.nf"
    process "INTERPROSCAN"
    config "./nextflow.config"
    tag "modules"
    tag "modules_nfcore"
    tag "interproscan"

    test("sarscov2 - proteome_fasta") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['sarscov2']['genome']['proteome_fasta'], checkIfExists: true)
                ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - proteome_fasta_gz") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['sarscov2']['genome']['proteome_fasta_gz'], checkIfExists: true)
                ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - proteome_fasta_gz - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['sarscov2']['genome']['proteome_fasta_gz'], checkIfExists: true)
                ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }
}
