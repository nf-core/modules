nextflow_process {

    name "Test Process KMCP_INDEX"
    script "../main.nf"
    process "KMCP_INDEX"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "kmcp"
    tag "kmcp/index"
    tag "kmcp/compute"

    setup {
        run("KMCP_COMPUTE") {
            script "../../../kmcp/compute/main.nf"
            process {
                """
                input[0] = [[id: 'test'],file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)]
                """
            }
        }
    }

    test("sarscov2 - fasta") {
        when {
            process {
                """
                input[0] = KMCP_COMPUTE.out.outdir
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                        process.out.kmcp,
                        file(process.out.log[0][1]).any { it.contains('time elapsed') }
                    ).match()
                }
            )
        }

    }

    test("sarscov2 - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = KMCP_COMPUTE.out.outdir
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}