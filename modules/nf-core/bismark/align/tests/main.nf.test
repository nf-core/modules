nextflow_process {

    name "Test Process BISMARK_ALIGN"
    script "../main.nf"
    process "BISMARK_ALIGN"
    tag "bismark"
    tag "bismark/align"
    tag "modules"
    tag "modules_nfcore"

    setup {
        run("BISMARK_GENOMEPREPARATION") {
            script "../../genomepreparation/main.nf"
            process {
                """
                input[0] = file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                """
            }
        }
    }

    test("Should run bismark/align (single end) without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:true ],
                            file(params.test_data['sarscov2']['illumina']['test_methylated_1_fastq_gz'], checkIfExists: true)
                           ]
                input[1] = BISMARK_GENOMEPREPARATION.out.index
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out.bam).match("bam_se") },
            { assert snapshot(process.out.unmapped).match("unmapped_se") },
            { assert snapshot(process.out.versions).match("versions") },
            {
                with(process.out.report) {
                    with(get(0)) {
                        assert get(1).endsWith("_SE_report.txt")
                        assert path(get(1)).readLines().last().contains("Bismark completed in")
                    }
                }
            }
            )
        }
    }

    test("Should run bismark/align (paired end) without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ],
                            [ 
                             file(params.test_data['sarscov2']['illumina']['test_methylated_1_fastq_gz'], checkIfExists: true),
                             file(params.test_data['sarscov2']['illumina']['test_methylated_2_fastq_gz'], checkIfExists: true)
                            ]
                           ]
                input[1] = BISMARK_GENOMEPREPARATION.out.index
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out.bam).match("bam_pe") },
            { assert snapshot(process.out.unmapped).match("unmapped_pe") },
            { assert snapshot(process.out.versions).match("versions") },
            {
                with(process.out.report) {
                    with(get(0)) {
                        assert get(1).endsWith("_PE_report.txt")
                        assert path(get(1)).readLines().last().contains("Bismark completed in")
                    }
                }
            }
            )
        }
    }
}
