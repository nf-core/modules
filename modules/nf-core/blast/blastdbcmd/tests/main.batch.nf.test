nextflow_process {

    name "Test Process BLAST_BLASTDBCMD_BATCH"
    script "../main.nf"
    process "BLAST_BLASTDBCMD_BATCH"
    config "./nextflow.config"
    tag "modules"
    tag "modules_nfcore"
    tag "blast"
    tag "blast/blastdbcmd"

    setup {
        run("BLAST_MAKEBLASTDB") {
            script "../../makeblastdb/main.nf"
            process {
                """
                input[0] = [ [id:'test2'], file(params.test_data['sarscov2']['genome']['proteome_fasta'], checkIfExists: true) ]
                """
            }
        }
    }


    test("Should query with a file containing a list of protein identifiers against a FASTA DB") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [id:'test'], file(params.test_data['sarscov2']['genome']['blast_proteome_list'], checkIfExists: true) ]
                input[1] = BLAST_MAKEBLASTDB.out.db
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.fasta_batch).match("fasta") },
                { assert process.out.versions }
            )
        }

    }

}