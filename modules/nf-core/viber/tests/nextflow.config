process {
    withName: VIBER {
        ext.args = [
            K : "10",
            binomial_cutoff : "0.05",
            dimensions_cutoff : "1",
            pi_cutoff : "0.02",
            re_assign : "FALSE"
        ]
     }
}

process {
    withLabel:error_ignore {
        maxRetries  = 3
        errorStrategy = {task.attempt <= 3 ? 'retry' : 'ignore'}
    }
}
