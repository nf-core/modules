nextflow_process {

    name "Test Process DEEPCELL_MESMER"
    script "../main.nf"
    config "./nextflow.config"
    process "DEEPCELL_MESMER"

    tag "modules"
    tag "modules_nfcore"
    tag "deepcell"
    tag "deepcell/mesmer"

    test("mesmer - tif") {

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                ]
                input[1] = [
                    file(params.test_data['generic']['tsv']['expression'], checkIfExists: true)
                ]
                input[2] = [
                    file(params.test_data['generic']['tsv']['network'], checkIfExists: true)
                ]
                input[3] = [
                    'ulm'
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.mask).match("mask") },
                { assert snapshot(process.out.versions).match("versions") }
            )
        }

    }

}
