nextflow_process {

    name "Test Process IPHOP_PREDICT"
    script "../main.nf"
    process "IPHOP_PREDICT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "iphop"
    tag "iphop/predict"
    tag "iphop/download"

    setup {
        run("IPHOP_DOWNLOAD") {
            script "../../download/main.nf"
            }
        }

    test(" ['sarscov2']['illumina']['contigs_fasta'] ") {

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ], // meta map
                    file(params.test_data['sarscov2']['illumina']['contigs_fasta'], checkIfExists: true)
                ]
                input[1] = IPHOP_DOWNLOAD.out.iphop_db
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test(" ['sarscov2']['illumina']['contigs_fasta'] - stub ") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ], // meta map
                    file(params.test_data['sarscov2']['illumina']['contigs_fasta'], checkIfExists: true)
                ]
                input[1] = IPHOP_DOWNLOAD.out.iphop_db
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
