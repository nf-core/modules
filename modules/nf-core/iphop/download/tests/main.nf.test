nextflow_process {

    name "Test Process IPHOP_DOWNLOAD"
    script "../main.nf"
    process "IPHOP_DOWNLOAD"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "iphop"
    tag "iphop/download"

    test("No input required") {

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.iphop_db.get(0)).list() ) }
            )
        }
    }

    test("No input required - stub") {

        options "-stub"

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
