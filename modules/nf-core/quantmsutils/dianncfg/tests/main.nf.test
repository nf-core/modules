nextflow_process {

    name "Test Process QUANTMSUTILS_DIANNCFG"
    script "../main.nf"
    process "QUANTMSUTILS_DIANNCFG"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "quantmsutils"
    tag "quantmsutils/dianncfg"

    test("proteomics - generate DIA-NN config") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [id:'test_exp'],
                    'Trypsin',
                    'Carbamidomethyl (C)',
                    'Oxidation (M)'
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path("${process.out.log[0]}").exists() },
                { assert snapshot(
                    process.out.diann_cfg,
                    process.out.versions
                ).match() }
            )
        }
    }

    test("proteomics - generate DIA-NN config - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of([
                    [id:'test_exp'],
                    'Trypsin',
                    'Carbamidomethyl (C)',
                    'Oxidation (M)'
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path("${process.out.log[0]}").exists() },
                { assert snapshot(
                    process.out.diann_cfg,
                    process.out.versions
                ).match() }
            )
        }
    }
}
