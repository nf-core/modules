nextflow_process {

    name "Test Process OPENMS_PEAKPICKERHIRES"
    script "../main.nf"
    process "OPENMS_PEAKPICKERHIRES"
    config "./nextflow.config"
    tag "modules"
    tag "modules_nfcore"
    tag "openms"
    tag "openms/peakpickerhires"

    test("proteomics - mzML") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.test_data['proteomics']['msspectra']['profile_spectra'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("proteomics - mzML - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_stub'], // meta map
                    file(params.test_data['proteomics']['msspectra']['profile_spectra'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
