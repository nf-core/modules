nextflow_process {

    name "Test Process PARABRICKS_MUTECTCALLER"
    script "../main.nf"
    process "PARABRICKS_MUTECTCALLER"

    tag "modules"
    tag "parabricks/mutectcaller"
    tag "modules_nfcore"
    tag "parabricks"
    tag "gpu"

    config "./nextflow.config"

    test("human - bam") {

        when {
            params {
                module_args = "--mutect-low-memory"
            }
            process {
                """
                input[0] = [
                    [ id:'test',  tumor_id:'tumour' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test2.paired_end.recalibrated.sorted.bam', checkIfExists: true),
                    [], // index only needed if using intervals or tumor-normal calling
                    [],
                    [],
                    []
                ]
                input[1] = [ // fasta
                    [ id: 'reference' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/chr21/sequence/genome.fasta', checkIfExists: true)
                    ]
                input[2] = [] // pon
                input[3] = [] // pon index
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    path(process.out.vcf[0][1]).vcf.variantsMD5,
                    process.out.stats,
                    process.out.findAll { key, val -> key.startsWith('versions') }
                    ).match() }
            )
        }

    }

