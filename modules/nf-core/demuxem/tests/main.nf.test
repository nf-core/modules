// nf-core modules test demuxem
nextflow_process {

    name "Test Process DEMUXEM"
    script "../main.nf"
    process "DEMUXEM"
    config "../nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "demuxem"

    test("Standard_Multiome - h5 - csv") {

        when {
            process {
                """
                
                input[0] = [
                    [ id:'sample1'],
                    file(params.test_data['homo_sapiens']['10xgenomics']['cellranger']['hashing_demultiplexing']['h5'], checkIfExists: true),
                    file(params.test_data['homo_sapiens']['10xgenomics']['cellranger']['hashing_demultiplexing']['csv'], checkIfExists: true)
                    ]

                 input[1] = [
                    [:],
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") },
                { assert snapshot(process.out).match() }
                
            )
        }

    }

    test("Standard_Multiome - h5 - csv - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'sample1'],
                    file(params.test_data['homo_sapiens']['10xgenomics']['cellranger']['hashing_demultiplexing']['h5'], checkIfExists: true),
                    file(params.test_data['homo_sapiens']['10xgenomics']['cellranger']['hashing_demultiplexing']['csv'], checkIfExists: true)
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") },
                { assert snapshot(process.out).match() }
                
            )
        }

    }

}
