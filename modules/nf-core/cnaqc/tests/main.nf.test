nextflow_process {

    name "Test Process CNAQC"
    script "../main.nf"
    process "CNAQC"

    tag "modules"
    tag "modules_nfcore"
    tag "cnaqc"

    test("test_cnaqc") {

        config "./nextflow.config"
        
        when {
            process {
                """
                input[0] = [
                    [ id: 'test', tumour_sample: 'HCC1395_HCC1395T' ], 
                        file('/Users/vvvirgy/Desktop/tmp/HCC1395_WXS_TUMOUREVO/formatter/vcf2cnaqc/HCC1395_WXS/HCC1395/HCC1395_HCC1395T/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_snv.rds'), 
                        file('/Users/vvvirgy/Desktop/tmp/HCC1395_WXS_TUMOUREVO/formatter/cna2cnaqc/HCC1395_WXS/HCC1395/HCC1395_HCC1395T/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_cna.rds')
                        // file(params.modules_testdata_base_path + 'delete_me/cnaqc/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_snv.rds', checkIfExists: true), 
                        // file(params.modules_testdata_base_path + 'delete_me/cnaqc/HCC1395_HCC1395T/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_cna.rds', checkIfExists: true)            
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },

                { assert snapshot(
                    process.out.qc_rds, 
                    process.out.plot_rds, 
                    process.out.plot_pdf_data, 
                    process.out.plot_pdf_qc, 
                    process.out.versions
                    ).match() }
            )
        }

    }

    test("cnaqc - rds - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test', tumour_sample: 'HCC1395_HCC1395T' ], 
                        file('/Users/vvvirgy/Desktop/tmp/HCC1395_WXS_TUMOUREVO/formatter/vcf2cnaqc/HCC1395_WXS/HCC1395/HCC1395_HCC1395T/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_snv.rds'), 
                        file('/Users/vvvirgy/Desktop/tmp/HCC1395_WXS_TUMOUREVO/formatter/cna2cnaqc/HCC1395_WXS/HCC1395/HCC1395_HCC1395T/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_cna.rds')
                        // file(params.modules_testdata_base_path + 'delete_me/cnaqc/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_snv.rds', checkIfExists: true), 
                        // file(params.modules_testdata_base_path + 'delete_me/cnaqc/HCC1395_HCC1395T/HCC1395_WXS_HCC1395_HCC1395_HCC1395T_cna.rds', checkIfExists: true)            
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
