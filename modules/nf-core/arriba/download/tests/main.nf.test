
nextflow_process {

    name "Test Process ARRIBA_DOWNLOAD"
    script "../main.nf"
    process "ARRIBA_DOWNLOAD"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "arriba"
    tag "arriba/download"

    test("test-arriba-download") {
        when {
            process {
                """
                input[0] = 'GRCh38'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("download - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = 'GRCh38'
                """
            }
        }

        then {
            assertAll(
                { assert process.success }
            )
        }
    }

}
