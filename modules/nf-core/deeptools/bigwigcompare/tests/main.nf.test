                input[1] = [
                    [ id:'no_blacklist' ],
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.output,
                                  process.out.versions)
                                  .match()
                }
            )
        }
    }

