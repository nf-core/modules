
nextflow_process {

    name "Test Process EIDER_QUERYTOCSV"
    script "../main.nf"
    process "EIDER_QUERYTOCSV"

    tag "modules"
    tag "modules_nfcore"
    tag "eider"
    tag "eider/querytocsv"

    test("test-eider-querytocsv") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
				    [
                        file('${moduleDir}/tests/assets/template.sql', checkIfExists: true)
                    ]
				]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
