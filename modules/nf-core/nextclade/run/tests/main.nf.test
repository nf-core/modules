
nextflow_process {

    name "Test Process NEXTCLADE_RUN"
    script "../main.nf"
    process "NEXTCLADE_RUN"

    tag "modules"
    tag "modules_nfcore"
    tag "nextclade"
    tag "nextclade/run"

    test("sarscov2 default") {
        
        when {
            process {
                """
                input[0] = Channel.of([
                    [id: 'test'], 
                    [file('/scicomp/home-pure/uoi4/nextclade_test/zip_vers/sars-cov-2-test/sequences.fasta', checkIfExists: true) ] 
                    ])
				input[1] = Channel.fromPath('/scicomp/home-pure/uoi4/nextclade_test/zip_vers/sars-cov-2-test')
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
    
}
