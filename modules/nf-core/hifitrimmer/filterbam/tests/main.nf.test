nextflow_process {


    name "Test Process HIFITRIMMER_FILTERBAM"
    script "../main.nf"
    process "HIFITRIMMER_FILTERBAM"

    tag "modules"
    tag "modules_nfcore"
    tag "hifitrimmer"
    tag "hifitrimmer/filterbam"

    config './nextflow.config'

    test("hifi_trimmer test - hits") {

        when {
            params {
                filter_bam_args    = "-f"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/hits/test.bam', checkIfExists: true),
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/hits/test.bed.gz', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.filtered,
                    process.out.versions_hifitrimmer
                    ).match()
                }
            )
        }
    }

    test("hifi_trimmer test - no hits") {

        when {
            params {
                filter_bam_args    = ""
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/no_hits/test.bam', checkIfExists: true),
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/no_hits/test.bed.gz', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.filtered,
                    process.out.versions_hifitrimmer
                    ).match()
                }
            )
        }
    }

    test("hifi_trimmer test - no valid hits") {

        when {
            params {
                filter_bam_args    = "-f"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/no_valid_hits/test.bam', checkIfExists: true),
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/no_valid_hits/test.bed.gz', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.filtered,
                    process.out.versions_hifitrimmer
                    ).match()
                }
            )
        }
    }

    test("hifi_trimmer test - stub") {

        options "-stub"

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/hits/test.bam', checkIfExists: true),
                        file('https://github.com/sanger-tol/hifi-trimmer/raw/refs/heads/main/tests/data/hits/test.bed.gz', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert snapshot(process.out.versions_hifitrimmer).match("versions") }
            )
        }
    }
}
