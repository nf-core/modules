nextflow_process {


    name "Test Process HIFITRIMMER_FILTERBAM"
    script "../main.nf"
    process "HIFITRIMMER_FILTERBAM"

    tag "modules"
    tag "modules_nfcore"
    tag "hifitrimmer"
    tag "hifitrimmer/filterbam"

    config './nextflow.config'

    test("hifi_trimmer filter_bam test - input bam") {

        when {
            params {
                filter_bam_args    = "-f"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test_bam' ], // meta map
                        file(params.modules_testdata_base_path + '/delete_me/hifitrimmer/test.bam', checkIfExists: true),
                        file(params.modules_testdata_base_path + '/delete_me/hifitrimmer/test.bed.gz', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

