nextflow_process {

    name "Test Process DEEPTMHMM"
    script "../main.nf"
    process "DEEPTMHMM"
    tag "modules"
    tag "modules_nfcore"
    tag "deeptmhmm"

    test("sarscov2 - proteome.fa") {

        when {
            process {
                """
                input[0] = [
                                [ id:'test', single_end:false ], // meta map
                                file(params.test_data['sarscov2']['genome']['proteome_fasta'], checkIfExists: true)
                            ]
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }

    test("sarscov2 - genome.fa.gz") {

        when {
            process {
                """
                input[0] = [
                                [ id:'test', single_end:false ], // meta map
                                file(params.test_data['sarscov2']['genome']['genome_fasta_gz'], checkIfExists: true)
                            ]
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }

    test("sarscov2 - proteome - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                                [ id:'test', single_end:false ], // meta map
                                file(params.test_data['sarscov2']['genome']['proteome_fasta'], checkIfExists: true)
                            ]
                """
            }
        }

        then {
            assertAll(
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }

    }

}
