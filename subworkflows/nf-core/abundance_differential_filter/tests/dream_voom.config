process {
    withName: 'DREAM_NORM' {
        ext.args = { [
            "--round_digits 2",
            "--apply_voom true"
        ].join(' ').trim() }
        ext.prefix = { "${meta.id}_${meta.differential_method}_voom_norm" }
    }

    withName: 'VARIANCEPARTITION_DREAM' {
        ext.args = { [
            "--round_digits 2",
            "--apply_voom true"
        ].join(' ').trim() }
        ext.prefix = { "${meta.id}_${meta.differential_method}_voom" }
    }
}
