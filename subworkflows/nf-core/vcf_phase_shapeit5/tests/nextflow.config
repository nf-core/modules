process {
    withName: GLIMPSE2_CHUNK {
        ext.args   = { params.glimpse2_chunk_args }
        ext.prefix = { "${meta.id}_${meta.chr}" }
    }

    withName: SHAPEIT5_PHASECOMMON {
        cpus       = 1 // needed for deterministic output
        ext.args   = "--seed 1"
        ext.prefix = { "${meta.id}_${meta.chr}_${meta.regionout.replace(':', '-')}.phased" }
    }

    withName: BCFTOOLS_INDEX_PHASE {
        ext.args   = '--csi'
    }

    withName: SHAPEIT5_LIGATE {
        ext.prefix = { "${meta.id}_${meta.chr}.ligate" }
    }

    withName: BCFTOOLS_INDEX_LIGATE {
        ext.args   = '--csi'
    }

    withName: BCFTOOLS_VIEW {
        ext.args = params.bcftools_view_args
    }

    withName: BCFTOOLS_PLUGINFILLTAGS {
        ext.prefix = { "${meta.id}_filled" }
        ext.args = params.bcftools_pluginfilltags_args
        ext.args2 = params.bcftools_pluginfilltags_args2
    }
}
