process {
    withName: MINIMAC4_COMPRESSREF {
        ext.args = ''
    }
    withName: MINIMAC4_IMPUTE {
        ext.prefix = { "${meta.id}_${meta.chr}_${meta.regionout}.minimac4" }
        ext.args   = '--output-format vcf.gz'
    }

    withName: GLIMPSE2_LIGATE {
        ext.prefix = { "${meta.id}_${meta.chr}.ligate" }
    }

    withName: BCFTOOLS_INDEX_PHASE {
        ext.args = '--tbi'
    }

    withName: BCFTOOLS_INDEX_LIGATE {
        ext.args = '--csi'
    }
}
