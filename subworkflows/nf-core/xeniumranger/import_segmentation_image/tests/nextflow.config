process {
    withName: 'XENIUMRANGER_IMPORT_SEGMENTATION' {
        ext.args = [
            '--units=microns',
            '--expansion-distance=0'
        ].join(' ').trim()
        
        cpus = 32
        memory = '200GB'
    }
    containerOptions = '-u $(id -u):$(id -g)'
}

docker.enabled = true
